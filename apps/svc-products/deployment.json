{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "svc-products"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "svc-products"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "svc-products"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "svc-products",
            "image": "svc-products:latest",
            "imagePullPolicy": "Never",
            "ports": [
              {
                "containerPort": 3333
              }
            ]
          }
        ]
      }
    }
  }
}
